<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/dimen_114_dp"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_news_summary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_110_dp"
        card_view:cardCornerRadius="@dimen/dimen_5_dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:contentPaddingLeft="@dimen/dimen_5_dp"
        card_view:contentPaddingRight="@dimen/dimen_5_dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageview_news_summary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_5_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0_dp"
                    android:layout_weight="6">

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:id="@+id/news_summary_title"
                        android:textStyle="bold"
                        android:textSize="@dimen/size_18_sp"
                        android:textColor="@android:color/black"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0_dp"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0_dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:id="@+id/label_news_summary_posted_by"
                            android:text="Posted by: "
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/news_summary_posted_by"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0_dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/news_summary_date"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_3_dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/dimen_2_dp"/>

</LinearLayout>